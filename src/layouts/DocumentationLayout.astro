---
import '../styles/global.css';
---

<!doctype html>
<html lang="en">
	<head>
		<base href={import.meta.env.BASE_URL} />
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href={import.meta.env.BASE_URL + '/favicon.svg' } />
		<meta name="generator" content={Astro.generator} />
		<title>Block Documentation Site</title>

		<!-- Block Fonts, referred to in global.css -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Courier+Prime:ital,wght@0,400;0,700;1,400;1,700&family=Libre+Franklin:ital,wght@0,100..900;1,100..900&family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
	</head>
	<body>
		
		<div class="h-12 bg-gray-700 p-2 pl-4 text-white">Header</div>
		<div class="h-10 bg-gray-300 p-2 pl-4 md:hidden block">Navigation</div>
		<div class="flex overflow:hidden">
			<!-- Sidebar -->
			<div class="hidden md:block h-vh md:w-80 md:min-w-80 bg-gray-300 p-2 pl-4 pt-4">Navigation</div>
			
			<!-- Main Content -->
			<div class="block-page-content block-markdown-content flex-1 p-4 max-w-4xl object-contain bg-zinc-50">
				<slot />
			</div>
			<div class="hidden xl:block h-vh xl:min-w-70 3xl:min-w-70 bg-gray-300 p-2 pl-4 pt-4">TOC</div>
		</div>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>